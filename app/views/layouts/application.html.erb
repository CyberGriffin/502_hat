<!DOCTYPE html>
<html>
<head>
  <title>TAMU Capstone Inventory</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <!-- Stylesheets -->
  <%= stylesheet_link_tag "application", media: "all", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
  <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" %>

  <style>
    .flash__alert { color: red; }
    .flash__notice { color: blue; }
    .flash__success { color: green; }

    .button-inline form {
      display: inline-block;
      margin-right: 5px;
    }
  </style>
</head>

<body>
  <header class="header-container">
    <!-- Navbar 1 -->
    <nav class="navbar navbar-expand-lg navbar-1">
  <div class="container-fluid d-flex align-items-center">
    <!-- Brand (Left) -->
    <div>
      <a class="navbar-brand" href="/" style="color:white">InventoryManagement</a>
    </div>
    
    <!-- Search (Center) -->
    <div class="flex-grow-1 d-flex justify-content-center">
      <form class="d-flex" style="width: 40rem;">
        <input type="text" id="search-input" placeholder="Search..." class="form-control" value="<%= params[:search] %>">
      </form>
    </div>
    
    <!-- User Profile (Right) -->
    <div class="ms-auto">
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <% if user_signed_in? %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <span style="font-size: 1.20rem; color:white;"><%= current_user.full_name %> (<%= current_user.role %> view)</span>
              </a>
              <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <li><%= link_to "Profile", edit_user_registration_path, class: "dropdown-item" %></li>
                <li><%= link_to "Settings", "#", class: "dropdown-item" %></li>
                <li><hr class="dropdown-divider"></li>
                <li>
                  <%= button_to "Toggle Role", toggle_role_path, method: :patch, class: "dropdown-item", form: { data: { turbo: false } } %>
                </li>
                <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %></li>
              </ul>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</nav>

    <!-- Navbar 2 -->
    <nav class="navbar navbar-expand-lg">
    <ul class="navbar-nav navbar-2">
            <li class="nav-item">
              <%= link_to "Inventory", inventories_path, class: "nav-link active" %>
            </li>
            <li class="nav-item">
              <%= link_to "Items", items_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Whitelists", whitelists_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Categories", categories_path, class: "nav-link" %>
            </li>
          </ul>
    </nav>
  </header>
  <style>
    .header-container {
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.4);
      background-color:#500000 !important;
    }
    .navbar .dropdown-toggle::after {
      color: white;
    }
    body {
      background-color: #EAE8DF;
    }
    .navbar-2 .nav-link {
      color: white !important;
    }
    .navbar-1 {
      border-bottom: 1px solid #707070;
    }
    .navbar-2 .nav-link.active {
      font-weight: bold;
      color: #D6D3C4 !important;
      cursor: default;
      text-decoration: underline;
      text-decoration-color: #D6D3C4;
      text-underline-offset: 0.1em;
    }
  </style>
  <script>
    // Handles active state for the navigation links
    document.addEventListener("DOMContentLoaded", function() {
      const currentPath = window.location.pathname;
      const navLinks = document.querySelectorAll('.navbar-2 .nav-link');

      navLinks.forEach(link => {
        if (link.getAttribute('href') === currentPath) {
          link.classList.add('active');
          link.addEventListener('click', (event) => {
            event.preventDefault();
          });
        }
        else {
          link.classList.remove('active');
        }
      });
    });
  </script>

  <!-- Flash Messages (Styled with Bootstrap) -->
  <% if flash.any? %>
    <div class="container mt-3" visible="false">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= bootstrap_flash_class(key) %> alert-dismissible fade show" role="alert">
          <%= value.html_safe %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>
    </div>
  <% end %>

  <%= yield %>

  <!-- Bootstrap JavaScript -->
  <%= javascript_include_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js", defer: true %>
</body>
</html>
