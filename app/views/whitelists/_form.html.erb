<%= form_with model: @whitelist, local: true do |f| %>
    <p>
      <%= f.label :email, "Email Address" %><br>
      <%= f.email_field :email, required: true, readonly: !@whitelist.new_record? %>
    </p>
    <p>
      <%= f.label :expires_at, "Expiration Date (Optional)" %><br>
      <%= f.date_field :expires_at %>
    </p>
    <p>
      <%= f.submit @whitelist.new_record? ? "Add to Whitelist" : "Update Whitelist Entry" %>
    </p>
  <% end %>
  
  <%= link_to "Back to Whitelist", whitelists_path %>
  