<h1 class="text-center mt-4">Accessibility Settings (needs links/ functionality once features are done)</h1>

<div class="container mt-5">
  <div class="d-flex flex-column gap-4">

    <!-- Color Theme -->
    <div class="d-flex align-items-center gap-3">
      <label for="darkModeToggle" class="form-label mb-0 me-3" style="width: 150px;">Color Theme:</label>
      <span>Light</span>
      <div class="form-check form-switch m-0">
        <input class="form-check-input" type="checkbox" id="darkModeToggle">
      </div>
      <span>Dark</span>
    </div>

    <!-- Font Size -->
    <div class="d-flex align-items-center gap-3">
      <label for="fontSizeToggle" class="form-label mb-0 me-3" style="width: 150px;">Font Size:</label>
      <span>Small</span>
      <div class="form-check form-switch m-0">
        <input class="form-check-input" type="checkbox" id="fontSizeToggle">
      </div>
      <span>Large</span>
    </div>

    <!-- Contrast -->
    <div class="d-flex align-items-center gap-3">
      <label for="contrastToggle" class="form-label mb-0 me-3" style="width: 150px;">Contrast Level:</label>
      <span>Low</span>
      <div class="form-check form-switch m-0">
        <input class="form-check-input" type="checkbox" id="contrastToggle">
      </div>
      <span>High</span>
    </div>

  </div>
</div>
