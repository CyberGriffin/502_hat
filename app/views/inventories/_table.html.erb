<table class="table table-bordered mt-4">
  <thead class="table-dark">
    <tr>
      <th id="sort-id">ID</th>
      <th id="sort-name">Item Name</th>
      <th id="sort-sku">SKU</th>
      <th id="sort-location">Location</th>
      <th id="sort-condition">Condition</th>
      <th id="sort-owner">Owner</th>
      <th id="sort-user">Current User</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% inventories.each do |inventory| %>
      <tr>
        <td><%= inventory.inv_id %></td>
        <td><%= inventory.item.name %></td>
        <td><%= inventory.sku %></td>
        <td><%= inventory.location %></td>
        <td><%= inventory.condition_of_item %></td>
        <td><%= inventory.original_owner.email %></td>
        <td><%= inventory.current_user&.email %></td>
        <td>
          <%= link_to "Edit", edit_inventory_path(inventory), class: "btn btn-sm btn-warning" %>
          <%= link_to "Delete", inventory_path(inventory), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>